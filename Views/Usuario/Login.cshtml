@model ProjetoFinal.Models.Usuario

@{
    ViewData["Title"] = "Create";
    Layout = null;
    <link href="~/css/Login.css" rel="stylesheet"/>
}

<h1 class="LognEscrita Titulo">Login</h1>
<h4 class="InformacaoH1 SubTitulo">Digite o email e a senha para realizar o login.</h4>
<hr />
<div class="row">
    <div class="col-md-4 DiviMairo">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group PrimeiroEmail">
                <label asp-for="UsuarioEmail" class="control-label LabelEmail label" ></label>
                <input asp-for="UsuarioEmail" class="form-control LabelEmail InputEmail" />
                <span asp-validation-for="UsuarioEmail" class="text-danger"></span>
            </div>
            <div class="form-group PrimeiroEmail">
                <label asp-for="UsuarioSenha" class="control-label LabelSenha label"></label>
                <input asp-for="UsuarioSenha" class="form-control LabelSenha InputSenha" />
                <span asp-validation-for="UsuarioSenha" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="ENTRAR" class="btn btn-primary BTN" />
            </div>
            <br />
            <h3 class="Mensagem">@ViewBag.Mensagem</h3>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
